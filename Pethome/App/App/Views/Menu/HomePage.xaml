<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pethome.Views.Menu.HomePage"
             NavigationPage.HasNavigationBar="False"
             xmlns:cardview="clr-namespace:PanCardView;assembly=PanCardView"
             xmlns:sharpnado="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame">
    <ScrollView BackgroundColor="White">
        <Grid 
              BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Text="Adopcion"
                   Grid.Row="0"
                   FontFamily="{StaticResource PoppinsSemiBold}"
                   FontSize="20"
                   Margin="20,10"
                   TextColor="Black"/>
            <cardview:CoverFlowView IsCyclical="False"
                                ItemsSource="{Binding Listamusica}"
                                Grid.Row="1" Grid.ColumnSpan="2">
                <cardview:CardsView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="40,.60,40,40">
                            <Frame  CornerRadius="18"
                                BackgroundColor="#D9D9D9"
                                Padding="-40"
                                HasShadow="False">
                                <Image Source="{Binding Image}"/>
                            </Frame>
                            <Grid VerticalOptions="End">
                                <sharpnado:MaterialFrame CornerRadius="18"
                                                     MaterialBlurStyle="Light"
                                                     MaterialTheme="AcrylicBlur"/>
                                <StackLayout Margin="15,0">
                                    <Label Text="{Binding Name}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="14"/>

                                    <Label Text="{Binding Age}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="14"/>

                                    <Label Text="{Binding Location}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="14"/>

                                    <Label Text="Ver mas"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       HorizontalOptions="End"
                                       FontSize="14"/>

                                </StackLayout>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </cardview:CardsView.ItemTemplate>
            </cardview:CoverFlowView>

        </Grid>
    </ScrollView>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
